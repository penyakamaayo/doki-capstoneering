<div class="container">
  <br>
  <div class="title">Patient Sign Up Form</div>
  <br>
  <div class="content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="user-details">
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="input-box">
          <span class="details"><%= f.label :firstname %></span>
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", required: true %>
        </div>
        <div class="input-box">
          <span class="details"><%= f.label :lastname %></span>
          <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", required: true %>
        </div>
        <div class="input-box">
          <span class="details"><%= f.label :email %></span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>
        </div>
        <div class="input-box">
          <span class="details"><%= f.label :mobile_number %></span>
          <%= f.text_field :mobile_number, autofocus: true, autocomplete: "mobile_number", required: true %>
        </div>
        <div class="input-box">
          <span class="details"><%= f.label :birthdate %></span>
          <%= f.date_field :birthdate, required: true %>
        </div>
        <div class="input-box">
          <span class="details"><%= f.label :password %></span>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        <div class="input-box">
          <span class="details"><%= f.label :password_confirmation %></span>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="gender-details">
        <input type="radio" name="gender" id="dot-1">
        <input type="radio" name="gender" id="dot-2">
        <input type="radio" name="gender" id="dot-3">
        <span class="gender-title">Gender</span>
        <div class="category">
          <label for="dot-1">
          <span class="dot one"></span>
          <span class="gender">Male</span>
        </label>
        <label for="dot-2">
          <span class="dot two"></span>
          <span class="gender">Female</span>
        </label>
        <label for="dot-3">
          <span class="dot three"></span>
          <span class="gender">Prefer not to say</span>
          </label>
        </div>
      </div>
      <br>
      <hr>
      <br>
      <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
      <div class="button">
        <%= f.submit "SIGN UP" %>
      </div>
      <div class="signin">
        <p>Already have an account? <a href="#">Sign in</a> or back to <a href="#">Homepage</a> .</p>
        <br>
      </div>
    <% end %>
  </div>
</div>
